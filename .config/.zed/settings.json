{
    "ui_font_size": 16,
    "ui_font_family": "CaskaydiaCove Nerd Font",
    "buffer_font_size": 14,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Catppuccin Macchiato"
    },
    "tab_size": 4,
    "lsp": {
        "biome": {
            "settings": {
                "config_path": "biome.json"
            }
        }
    },
    "language_servers": ["biome", "!typescript-language-server", "!eslint"],
    "languages": {
        "TypeScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "remove_trailing_whitespace_on_save": true
        },
        "JavaScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "remove_trailing_whitespace_on_save": true
        },
        "TSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "remove_trailing_whitespace_on_save": true
        },
        "Rust": {
            "formatter": {
                "language_server": {
                    "name": "rust_analyzer"
                }
            },
            "remove_trailing_whitespace_on_save": true
        },
        "JSON": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "remove_trailing_whitespace_on_save": true
        },
        "JSONC": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "remove_trailing_whitespace_on_save": true
        }
    }
}
